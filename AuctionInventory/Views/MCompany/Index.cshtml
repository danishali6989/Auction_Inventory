    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<meta name="viewport" content="width=device-width" />
<title>Index</title>
<style>
    span.field-validation-error {
        color: red;
    }
    /*we have overrides the css to change border color of menus*/
    .navbar-inverse {
        background-color: #337ab7;
        border-color: #333;
    }
</style>
<div style="width:90%; margin:70px auto" class="tablecontainer">
    <a class="popup btn btn-primary" href="/MCompany/save/0" style="margin-bottom:20px; margin-top:20px;">Add New Company</a>
    <table id="myDatatable">
        <thead>
            <tr>
                <th>Company Name</th>
                <th>Area</th>
                <th>Country</th>
                <th>City</th>
                <th>Email ID</th>
                <th>Websites</th>
                <th>Phone Number</th>
                <th>Office Number</th>
                <th>Address</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
    </table>
</div>
<script>
    $(document).ready(function () {
        var oTable = $('#myDatatable').DataTable({
            "scrollY": 200,
            "scrollX": true,
            "ajax": {
                "url": '/MCompany/GetAllCompany',
                "type": "get",
                "datatype": "json"
        },
            "columns": [
                { "data": "strCompanyName", "autoWidth": true },
                { "data": "strArea", "autoWidth": true },
                { "data": "iCountry", "autoWidth": true },
                { "data": "iCity", "autoWidth": true },
                { "data": "strEmailID", "autoWidth": true },
                { "data": "strWebsites", "autoWidth": true },
                { "data": "iPhoneNumber", "autoWidth": true },
                { "data": "iOfcPhoneNumber", "autoWidth": true },
                { "data": "strAddress", "autoWidth": true },
                           
                {
                    "data": "iCompanyID", "width": "50px", "render": function (data) {
                        return '<a class="popup" href="/MCompany/save/' + data + '">Edit</a>';
                    }
                },
                {
                    "data": "iCompanyID", "width": "50px", "render": function (data) {
                        return '<a class="popup" href="/MCompany/delete/' + data + '">Delete</a>';
                    }
                }
    ]
    })
        //$('.tablecontainer').on('click', 'a.popup', function (e) {
        //    e.preventDefault();
        //    OpenPopup($(this).attr('href'));
        //})
    function OpenPopup(pageUrl) {
        var $pageContent = $('<div/>');
        $pageContent.load(pageUrl, function () {
            $('#popupForm', $pageContent).removeData('validator');
            $('#popupForm', $pageContent).removeData('unobtrusiveValidation');
            $.validator.unobtrusive.parse('form');

        });

        $dialog = $('<div class="popupWindow" style="overflow:auto"></div>')
                  .html($pageContent)
                  .dialog({
                      draggable: false,
                      autoOpen: false,
                      resizable: false,
                      model: true,
                      title: 'Popup Dialog',
                      height: 550,
                      width: 600,
                      close: function () {
                          $dialog.dialog('destroy').remove();
                      }
                  })

        $('.popupWindow').on('submit', '#popupForm', function (e) {
            var url = $('#popupForm')[0].action;
            $.ajax({
                type: "POST",
                url: url,
                data: $('#popupForm').serialize(),
                success: function (data) {
                    if (data.status) {
                        $dialog.dialog('close');
                        oTable.ajax.reload();
                    }
                }
            })

            e.preventDefault();
        })

        $dialog.dialog('open');
    }
    })
</script>



