
@model AuctionInventory.Models.Vehicles
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<style type="text/css">
    body {
        font-family: Arial;
        font-size: 10pt;
    }

    .error {
        color: red;
    }
</style>
<h2>Save</h2>
@using (Html.BeginForm("Save", "MVehicle", FormMethod.Post, new { id = "popupForm" }))
{
    if (Model != null && Model.iVehicleID > 0)
    {
        @Html.HiddenFor(a => a.iVehicleID)
    }


    <div class="row">



        <div class="col-md-4">
            <label>Lot Number</label>
            @Html.TextBoxFor(a => a.iLotNum, new { @class = "form-control  input-group-lg", @placeholder = "Enter Lot Number" })
            @Html.ValidationMessageFor(m => m.iLotNum, "", new { @class = "error" })


        </div>
        <div class="col-md-4">
            <label>Grade </label>
            @Html.TextBoxFor(a => a.strGrade, new { @class = "form-control  input-group-lg", @placeholder = "Enter Grade" })
            @Html.ValidationMessageFor(m => m.strGrade, "", new { @class = "error" })


        </div>
        <div class="col-md-4">
            <label>Chassis Number</label>
            @Html.TextBoxFor(a => a.strChassisNum, new { @class = "form-control  input-group-lg", @placeholder = "Enter Chassis Number" })
            @Html.ValidationMessageFor(m => m.strChassisNum, "", new { @class = "error" })


        </div>
        <div class="col-md-4">
            <label>Category </label>
            @Html.TextBoxFor(a => a.strCategory, new { @class = "form-control  input-group-lg", @placeholder = "Enter Category" })
            @Html.ValidationMessageFor(m => m.strCategory, "", new { @class = "error" })


        </div>
        <div class="col-md-4">
            <label>Make </label>
            @Html.TextBoxFor(a => a.strMake, new { @class = "form-control  input-group-lg", @placeholder = "Enter Make" })
            @Html.ValidationMessageFor(m => m.strMake, "", new { @class = "error" })


        </div>
        <div class="col-md-4">
            <label>Model </label>
            @Html.TextBoxFor(a => a.iModel, new { @class = "form-control  input-group-lg", @placeholder = "Enter Model" })
            @Html.ValidationMessageFor(m => m.iModel, "", new { @class = "error" })


        </div>
        <div class="col-md-4">
            <label>Year </label>
            @Html.TextBoxFor(a => a.iYear, new { @class = "form-control  input-group-lg", @placeholder = "Enter Year" })
            @Html.ValidationMessageFor(m => m.iYear, "", new { @class = "error" })


        </div>
        <div class="col-md-4">
            <label>Color </label>
            @Html.TextBoxFor(a => a.strColor, new { @class = "form-control  input-group-lg", @placeholder = "Enter Color" })
            @Html.ValidationMessageFor(m => m.strColor, "", new { @class = "error" })


        </div>
        <div class="col-md-4">
            <label>KM </label>
            @Html.TextBoxFor(a => a.dmlKM, new { @class = "form-control  input-group-lg", @placeholder = "Enter KM" })
            @Html.ValidationMessageFor(m => m.dmlKM, "", new { @class = "error" })


        </div>
        <div class="col-md-4">
            <label>Origin </label>
            @Html.TextBoxFor(a => a.strOrigin, new { @class = "form-control  input-group-lg", @placeholder = "Enter Origin" })
            @Html.ValidationMessageFor(m => m.strOrigin, "", new { @class = "error" })


        </div>
        <div class="col-md-4">
            <label>Door </label>
            @Html.TextBoxFor(a => a.iDoor, new { @class = "form-control  input-group-lg", @placeholder = "Enter Door" })
            @Html.ValidationMessageFor(m => m.iDoor, "", new { @class = "error" })


        </div>
        <div class="col-md-4">
