
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<meta name="viewport" content="width=device-width" />
<title>Index</title>
<style>
    span.field-validation-error {
        color: red;
    }
    /*we have overrides the css to change border color of menus*/
    .navbar-inverse {
        background-color: #337ab7;
        border-color: #333;
    }
</style>
<div style="width:90%; margin:70px auto" class="tablecontainer">
    <a class="popup btn btn-primary" href="/MCustomer/save/0" style="margin-bottom:20px; margin-top:20px;">Add New Customer</a>
    <table id="myDatatable">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Middle Name</th>
                <th>Last Name</th>
                <th>Country</th>
                <th>City</th>
                <th>Email ID</th>
                <th>Phone Number</th>
                <th>Address</th>
                <th>Pincode</th>
                <th>Credit Limit</th>
                <th>PersonID</th>
                <th>Person FirstName</th>
                <th>Person MiddleName</th>
                <th>Person LastName</th>
                <th>Company Name</th>
                <th>Customer Photo</th>
                <th>Customer Date</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
    </table>
</div>
<script>
    $(document).ready(function () {
        var oTable = $('#myDatatable').DataTable({
            "scrollY": 200,
            "scrollX": true,
            "ajax": {
                "url": '/MCustomer/GetAllCustomers',
                "type": "get",
                "datatype": "json"
            },
            "columns": [
                { "data": "strFirstName", "autoWidth": true },
                { "data": "strMiddleName", "autoWidth": true },
                { "data": "strLastName", "autoWidth": true },
                { "data": "iCountry", "autoWidth": true },
                { "data": "iCity", "autoWidth": true },
                 { "data": "strEmailID", "autoWidth": true },
                { "data": "iPhoneNumber", "autoWidth": true },
                { "data": "strAddress", "autoWidth": true },
                { "data": "iPincode", "autoWidth": true },
                { "data": "strCreditLimit", "autoWidth": true },
                 { "data": "iPersonID", "autoWidth": true },
                { "data": "strPersonFirstName", "autoWidth": true },
                { "data": "strPersonMiddleName", "autoWidth": true },
                { "data": "strPersonLastName", "autoWidth": true },
                { "data": "strCompanyName", "autoWidth": true },
                { "data": "CustomerPhoto", "autoWidth": true },
                { "data": "CustomerDate", "autoWidth": true },
                {
                    "data": "iCustomerID", "width": "50px", "render": function (data) {
                        return '<a class="popup" href="/MCustomer/save/' + data + '">Edit</a>';
                    }
                },
                {
                    "data": "iCustomerID", "width": "50px", "render": function (data) {
                        return '<a class="popup" href="/MCustomer/delete/' + data + '">Delete</a>';
                    }
                }
            ]
        })
        //$('.tablecontainer').on('click', 'a.popup', function (e) {
        //    e.preventDefault();
        //    OpenPopup($(this).attr('href'));
        //})
        function OpenPopup(pageUrl) {
            var $pageContent = $('<div/>');
            $pageContent.load(pageUrl, function () {
                $('#popupForm', $pageContent).removeData('validator');
                $('#popupForm', $pageContent).removeData('unobtrusiveValidation');
                $.validator.unobtrusive.parse('form');

            });

            $dialog = $('<div class="popupWindow" style="overflow:auto"></div>')
                      .html($pageContent)
                      .dialog({
                          draggable: false,
                          autoOpen: false,
                          resizable: false,
                          model: true,
                          title: 'Popup Dialog',
                          height: 550,
                          width: 600,
                          close: function () {
                              $dialog.dialog('destroy').remove();
                          }
                      })

            $('.popupWindow').on('submit', '#popupForm', function (e) {
                var url = $('#popupForm')[0].action;
                $.ajax({
                    type: "POST",
                    url: url,
                    data: $('#popupForm').serialize(),
                    success: function (data) {
                        if (data.status) {
                            $dialog.dialog('close');
                            oTable.ajax.reload();
                        }
                    }
                })

                e.preventDefault();
            })

            $dialog.dialog('open');
        }
    })
</script>

