<div style="width:90%; margin:70px auto" class="tablecontainer">
    <a class="popup btn btn-primary" href="/MStaff/save/0" style="margin-bottom:20px; margin-top:20px;">Add New Staff</a>
    <table id="myDatatable">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Nationality Address</th>
                <th>Nationality</th>
                <th>Nationality Contact</th>
                <th>Email ID</th>                
                <th>Passport</th>
                <th>Passport Expiry</th>
                <th>Visa</th>
                <th>Visa Expiry</th>
                <th>DOB</th>
                <th>DOJ</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
    </table>
</div>
<script>
    $(document).ready(function () {
        var oTable = $('#myDatatable').DataTable({
            "scrollY":true,
            "scrollX": true,
            "ajax": {
                "url": '/MStaff/GetAllStaff',
                "type": "get",
                "datatype": "json"
            },
            "columns": [
                { "data": "strFirstName", "autoWidth": true },
                //{ "data": "strMiddleName", "autoWidth": true },
                { "data": "strLastName", "autoWidth": true },
                { "data": "strNationalityAddress", "autoWidth": true },
                { "data": "iNationality", "autoWidth": true },
                { "data": "iNationalityContact", "autoWidth": true },
                { "data": "strEmailID", "autoWidth": true },
                //{ "data": "iIDNO", "autoWidth": true },
                //{ "data": "strMISC", "autoWidth": true },
                { "data": "strPassport", "autoWidth": true },
                { "data": "strPassportExpiry", "autoWidth": true },
                { "data": "strVisa", "autoWidth": true },
                { "data": "strVisaExpiry", "autoWidth": true },
               // { "data": "strCurrentAddress", "autoWidth": true },
                //{ "data": "iDesignation", "autoWidth": true },
               // { "data": "dmlSalary", "autoWidth": true },
                { "data": "DOB", "autoWidth": true },
                { "data": "DOJ", "autoWidth": true },
                //{ "data": "strRemark", "autoWidth": true },
                {
                    "data": "iStaffID", "width": "50px", "render": function (data) {
                        return '<a class="popup" href="/MStaff/save/' + data + '">Edit</a>';
                    }
                },
                {
                    "data": "iStaffID", "width": "50px", "render": function (data) {
                        return '<a class="popup" href="/MStaff/delete/' + data + '">Delete</a>';
                    }
                }
            ]
        })
        //$('.tablecontainer').on('click', 'a.popup', function (e) {
        //    e.preventDefault();
        //    OpenPopup($(this).attr('href'));
        //})
        function OpenPopup(pageUrl) {
            var $pageContent = $('<div/>');
            $pageContent.load(pageUrl, function () {
                $('#popupForm', $pageContent).removeData('validator');
                $('#popupForm', $pageContent).removeData('unobtrusiveValidation');
                $.validator.unobtrusive.parse('form');

            });

            $dialog = $('<div class="popupWindow" style="overflow:auto; "><a href="#">X</a></div>')
                      .html($pageContent)
                      .dialog({
                          draggable: false,
                          autoOpen: false,
                          resizable: false,
                          model: true,
                          title: 'Popup Dialog',
                          height: 550,
                          width: 600,
                          close: function () {
                              $dialog.dialog('destroy').remove();
                          }
                      })

            $('.popupWindow').on('submit', '#popupForm', function (e) {
                var url = $('#popupForm')[0].action;
                $.ajax({
                    type: "POST",
                    url: url,
                    data: $('#popupForm').serialize(),
                    success: function (data) {
                        if (data.status) {
                            $dialog.dialog('close');
                            oTable.ajax.reload();
                        }
                    }
                })

                e.preventDefault();
            })

            $dialog.dialog('open');
        }
    })
</script>

