                @Html.ValidationMessageFor(m => m.strPersonLastName, "", new { @class = "error" })


            </div>
       

            @*<div class="form-group">
                    <label>Customer Photo </label>
                    @Html.TextBoxFor(a => a.CustomerPhoto, new { @class = "form-control  input-group-lg", @placeholder = "Enter Category Name" })
                    @Html.ValidationMessageFor(m => m.CustomerPhoto, "", new { @class = "error" })


