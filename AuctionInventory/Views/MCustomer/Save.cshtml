@model AuctionInventory.Models.Customer
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style type="text/css">
    body {
        font-family: Arial;
        font-size: 10pt;
    }

    .error {
        color: red;
    }
</style>
<h2>Save</h2>
@using (Html.BeginForm("save", "MCustomer", FormMethod.Post, new { id = "popupForm" }))
{
