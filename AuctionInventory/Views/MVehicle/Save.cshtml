            @Html.TextBoxFor(a => a.strLocation, new { @class = "form-control  input-group-lg", @placeholder = "Enter Location" })
            @Html.ValidationMessageFor(m => m.strLocation, "", new { @class = "error" })


        </div>
        <div class="col-md-4">
            <label>weight </label>
            @Html.TextBoxFor(a => a.weight, new { @class = "form-control  input-group-lg", @placeholder = "Enter weight" })
            @Html.ValidationMessageFor(m => m.weight, "", new { @class = "error" })


        </div>
        <div class="col-md-4">
            <label>HSCode </label>
            @Html.TextBoxFor(a => a.strHSCode, new { @class = "form-control  input-group-lg", @placeholder = "Enter HSCode" })
            @Html.ValidationMessageFor(m => m.strHSCode, "", new { @class = "error" })


        </div>
        <div class="col-md-4">
            <label>ATMT </label>
            @Html.TextBoxFor(a => a.ATMT, new { @class = "form-control  input-group-lg", @placeholder = "Enter ATMT" })
            @Html.ValidationMessageFor(m => m.ATMT, "", new { @class = "error" })


        </div>
        <div class="col-md-4">
            <label>Custom Asses Val</label>
            @Html.TextBoxFor(a => a.iCustomAssesVal, new { @class = "form-control  input-group-lg", @placeholder = "Enter Custom Asses Val" })
