            @Html.TextBoxFor(a => a.iCustomValInJPY, new { @class = "form-control  input-group-lg", @placeholder = "Enter Custom Val In JPY" })
            @Html.ValidationMessageFor(m => m.iCustomValInJPY, "", new { @class = "error" })


        </div>
    </div>
    <div>
        <br />
   @if (Model != null && Model.iVehicleID > 0 && Model.iVehicleID != null)
      
        {
            <input type="submit" style="margin-left: 400px;" id="btnUpdate" class="btn btn-warning col-md-1" value="Update">
        }
        else
        {
            <input type="submit" style="margin-left: 400px;" id="btnSave" class="btn btn-success col-md-1" value="Save">
        }

        @*<input type="submit" value="Save" />*@

        <input type="button" style="margin-left: 40px;" class="btn btn-warning col-md-1" value="Cancel" onclick="CancelVehicleInfo();" />

    </div>
}
<script>
    function CancelVehicleInfo() {
        window.location.href = "/MVehicle/Index";
    }

</script>

