@model AuctionInventoryDAL.Entity.UserLogin
@{
    Layout = null;
}
<link rel="stylesheet" href="~/Content/bootstrap/css/bootstrap.min.css">
<!-- Font Awesome -->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
<!-- Ionicons -->
<link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
<!-- Theme style -->
@*<link rel="stylesheet" href="dist/css/AdminLTE.css">
    <link href="dist/css/custom.css" rel="stylesheet" />*@
<link href="~/Content/dist/css/AdminLTE.css" rel="stylesheet" />
<link href="~/Content/dist/css/custom.css" rel="stylesheet" />
<!--<h2>@ViewBag.Title</h2>-->

<div class="hold-transition login-page">
    <div class="login-box">

        <div class="login-logo">
            <a href="../../index2.html"><b>Admin Login</b></a>
        </div><!-- /.login-logo -->
        <div class="login-box-body">
            <h4><p class="login-box-msg">Sign in to start your session</p></h4>

            <section id="loginForm">

                @using (Html.BeginForm("SubmitLogin", "Login", FormMethod.Post, new { id = "popupForm" }))
                {
                    if (Model != null && Model.UserID > 0)
                    {
                        @Html.HiddenFor(a => a.UserID)
                    }
                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-envelope"></i>
                            </div>
                            @Html.TextBoxFor(a => a.UserName, new { @class = "form-control", @placeholder = "Email Address" })
                            @Html.ValidationMessageFor(a => a.UserName)
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-lock"></i>
                            </div>
                            @Html.TextBoxFor(a => a.Password, new { @class = "form-control", @placeholder = "Password",@type= "Password" })
                            @Html.ValidationMessageFor(a => a.Password)
                        </div>
                    </div>
                    <div class="row" style="text-align:center;">
                        <button type="submit" class="btn btn-danger" style="width:30%">Login</button> &nbsp; &nbsp;&nbsp;

                        @Html.ActionLink("Register", "Register", null, new { @class = "btn btn-warning", @style = "width:30%" })
                    </div>
                }
            </section>
        </div>

    </div>
</div>
