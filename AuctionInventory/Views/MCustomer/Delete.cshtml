@model AuctionInventory.Models.Customer
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Delete Employee</h2>
@using (Html.BeginForm("delete", "MCustomer", FormMethod.Post, new { id = "popupForm" }))
{
    @Html.HiddenFor(a => a.iCustomerID)
    <div class="form-group">
        <label>First Name</label>
        <p>@Model.strFirstName </p>
    </div>

    <div class="form-group">
        <label>Middle Name </label>
        <p>@Model.strMiddleName </p>
    </div>

    <div class="form-group">
        <label>Last Name </label>
        <p>@Model.strLastName </p>
    </div>

    <div class="form-group">
        <label>Country </label>
        <p>@Model.iCountry </p>
    </div>

    <div class="form-group">
        <label>City </label>
        <p>@Model.iCity </p>
    </div>
    <div class="form-group">
        <label>Email ID </label>
        <p>@Model.strEmailID </p>
    </div>

    <div class="form-group">
        <label>Phone Number </label>
        <p>@Model.iPhoneNumber </p>
    </div>

    <div class="form-group">
        <label>Address </label>
        <p>@Model.strAddress </p>
    </div>
    <div class="form-group">
        <label>Pincode </label>
        <p>@Model.iPincode </p>
    </div>

    <div class="form-group">
        <label>Credit Limit </label>
        <p>@Model.strCreditLimit </p>
    </div>

    <div class="form-group">
        <label>PersonID </label>
        <p>@Model.iPersonID </p>
    </div>
    <div class="form-group">
        <label>Person FirstName </label>
        <p>@Model.strPersonFirstName </p>
    </div>

    <div class="form-group">
        <label>Person MiddleName</label>
        <p>@Model.strPersonMiddleName</p>
    </div>

    <div class="form-group">
        <label>Person LastName </label>
        <p>@Model.strPersonLastName </p>
    </div>
    <div class="form-group">
        <label>Company Name </label>
        <p>@Model.strCompanyName </p>
    </div>

    <div class="form-group">
        <label>Customer Photo </label>
        <p>@Model.CustomerPhoto </p>
    </div>

    <div class="form-group">
        <label>Customer Date </label>
        <p>@Model.CustomerDate </p>
    </div>
   
    <div>
        <input type="submit" value="Delete" />
    </div>
}