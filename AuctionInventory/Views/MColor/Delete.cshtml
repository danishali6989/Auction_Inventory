@model AuctionInventory.Models.Color
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete Color</h2>
@using (Html.BeginForm("delete", "MColor", FormMethod.Post, new { id = "popupForm" }))
{
    @Html.HiddenFor(a => a.iColorID)
    <div class="form-group">
        <label>Color Name</label>
        <p>@Model.strColorName</p>
    </div>


    <div>
        <input type="submit" value="Delete" />
    </div>
}

